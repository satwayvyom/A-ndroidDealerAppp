<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity2">


  <Button
      android:id="@+id/btn"
      android:layout_width="75dp"
      android:layout_height="35dp"
      android:layout_marginStart="4dp"
      android:layout_marginTop="4dp"
      android:background="@drawable/btn4"
      android:backgroundTint="@color/ex"
      android:elevation="8dp"
      android:text="Satelite"
      android:textColor="@color/white"
      app:layout_constraintStart_toStartOf="@+id/guideline80"
      app:layout_constraintTop_toBottomOf="@+id/bnt" />

  <Button
      android:id="@+id/bnt"
      android:layout_width="75dp"
      android:layout_height="35dp"
      android:layout_marginStart="4dp"
      android:layout_marginTop="28dp"
      android:background="@drawable/btn4"
      android:backgroundTint="@color/ex"
      android:elevation="8dp"
      android:text="Terrain"
      android:textColor="@color/white"
      app:layout_constraintStart_toStartOf="@+id/guideline80"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/but"
      android:layout_width="75dp"
      android:layout_height="35dp"
      android:layout_marginStart="4dp"
      android:layout_marginTop="4dp"
      android:background="@drawable/btn4"
      android:backgroundTint="@color/ex"
      android:elevation="8dp"
      android:text="Default"
      android:textColor="@color/white"
      app:layout_constraintStart_toStartOf="@+id/guideline80"
      app:layout_constraintTop_toBottomOf="@+id/btn" />

 <fragment
     android:id="@+id/map"
     android:name="com.google.android.gms.maps.SupportMapFragment"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_gravity="center"
     android:layout_marginBottom="16dp"
     app:layout_constraintBottom_toBottomOf="parent"
     tools:layout_editor_absoluteX="-57dp" />

 <androidx.constraintlayout.widget.Guideline
     android:id="@+id/guideline80"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     app:layout_constraintGuide_percent="0.02" />


</androidx.constraintlayout.widget.ConstraintLayout>